<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Github remote -->
  <remote  name="github"
           fetch="https://github.com" />

  <!-- VMware general remote -->
  <remote  name="vmware"
           fetch="http://gerrit.cloudbuilders.vmware.local:8080"
           review="gerrit.cloudbuilders.vmware.local:8080" />

  <!-- NSBU Gitlab remote -->
  <remote  name="vmos"
           fetch="ssh://nsxgitlab.nicira.eng.vmware.com" />

  <!-- Defaults for repo -->
  <default remote="vmware"
           sync-c="true"
           sync-j="4"
           revision="master" />

  <!-- playbooks -->
  <project path="ansible/playbooks" name="ansible-playbooks-supervio" groups="gerrit,playbooks,supervio" remote="vmware"/>

  <!-- gerrit -->
  <project path="ansible/roles/postfix" name="petemcw/ansible-role-postfix.git" groups="gerrit" remote="github" />
  <project path="ansible/roles/openldap" name="ansible-role-openldap" groups="gerrit" remote="vmware" />
  <project path="ansible/roles/gerrit" name="ansible-role-gerrit" groups="gerrit" remote="vmware" />

  <!-- SuperVIO -->
  <project path="setup" name="supervio-setup" groups="supervio" remote="vmware" />
  <!-- modules -->
  <project path="ansible/modules/supervio" name="ansible-module-supervio" groups="modules,supervio" remote="vmware">
    <copyfile src="set_vcsa_sh.py" dest="ansible/library/set_vcsa_sh.py" />
    <copyfile src="dc_cluster.py" dest="ansible/library/dc_cluster.py" />
    <copyfile src="vds.py" dest="ansible/library/vds.py" />
    <copyfile src="vcenter_query.py" dest="ansible/library/vcenter_query.py" />
    <copyfile src="vPortgroup.py" dest="ansible/library/vPortgroup.py" />
    <copyfile src="add_nfs_ds.py" dest="ansible/library/add_nfs_ds.py" />
    <copyfile src="ref_host_profile.py" dest="ansible/library/ref_host_profile.py" />
    <copyfile src="deploy_vcsa.py" dest="ansible/library/deploy_vcsa.py" />

    <!-- win_file module had a bug and was left out of ansible 1.9.1.  pull in the fixed version until
         ansible release has a working version.  Remove at will after that. -->
    <copyfile src="win_file.ps1" dest="ansible/library/win_file.ps1" />
    <copyfile src="win_file.py" dest="ansible/library/win_file.py" />

  </project>
  <project path="ansible/modules/xml" name="ansible-xml" groups="modules,supervio" remote="vmware" >
    <copyfile src="library/xml" dest="ansible/library/xml" />
  </project>
  <project path="ansible/modules/vsphere" name="ViaSat/ansible-vsphere.git" groups="modules,supervio" remote="github">
    <copyfile src="vsphere" dest="ansible/library/vsphere" />
  </project>

  <!-- roles from vmware -->
  <project path="ansible/roles/ansible" name="ansible-role-ansible" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/apache" name="ansible-role-apache.git" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/autodeploy" name="ansible-role-autodeploy" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/consul" name="ansible-role-consul" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/dnsmasq" name="ansible-role-dnsmasq" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/kibana" name="ansible-role-kibana" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/kubernetes_master" name="ansible-role-kubernetes-master" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/kubernetes_node" name="ansible-role-kubernetes-node" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/elasticsearch" name="ansible-role-elasticsearch" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/logstash-server" name="ansible-role-logstash-server" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/net" name="ansible-role-net" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/nsx" name="ansible-role-nsx" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/ovftool" name="ansible-role-ovftool" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/photon" name="ansible-role-photon" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/pip" name="ansible-role-pip" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/redmine" name="ansible-role-redmine" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/registrator" name="ansible-role-registrator" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/repo" name="ansible-role-repo" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/sshkeys" name="ansible-role-sshkeys" groups="gerrit,roles,supervio" remote="vmware"/>
  <project path="ansible/roles/sudo" name="ansible-role-sudo" groups="gerrit,roles,supervio" remote="vmware"/>
  <project path="ansible/roles/supervio" name="ansible-role-supervio" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/vcenter" name="ansible-role-vcenter" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/vcsa" name="ansible-role-vcsa" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/vio" name="ansible-role-vio" groups="roles,supervio" remote="vmware"/>
  <project path="ansible/roles/graphite-api" name="ansible-role-graphite-api" groups="roles,supervio" remote="vmware"/>

  <!-- roles from github -->
  <project path="ansible/roles/hosts" name="ajsalminen/ansible-role-hosts.git" groups="gerrit,roles,supervio" remote="github"/>
  <project path="ansible/roles/franklinkim.nginx" name="weareinteractive/ansible-nginx.git" groups="roles,supervio" remote="github"/>
  <project path="ansible/roles/franklinkim.openssl" name="momentumsi/ansible-openssl.git" groups="roles,supervio" remote="github"/>
  <project path="ansible/roles/franklinkim.htpasswd" name="weareinteractive/ansible-htpasswd.git" groups="roles,supervio" remote="github"/>

  <!-- container image projects -->
  <project path="containers/docker/collectd" name="containers/docker-collectd" groups="supervio,docker" remote="vmware"/>
  <project path="containers/docker/elasticsearch" name="containers/docker-elasticsearch" groups="supervio,docker,elk" remote="vmware"/>
  <project path="containers/docker/graphite-api" name="containers/docker-graphite-api" groups="supervio,docker" remote="vmware"/>
  <project path="containers/docker/kibana" name="containers/docker-kibana" groups="supervio,docker,elk" remote="vmware"/>
  <project path="containers/docker/logstash-server" name="containers/docker-logstash-server" groups="supervio,docker,elk" remote="vmware"/>

  <!-- user interface (django) -->
  <project path="ui" name="supervio-ui" groups="supervio" remote="vmware"/>

  <project path="scripts" name="supervio-scripts" groups="supervio" remote="vmware" />

  <!-- VMOS -->
  <project path="vmos/brussell/cinder-havana" name="brussell/cinder-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/brussell/thermosite" name="brussell/thermosite.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/cinder-havana" name="nsbu-openstack/cinder-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/glance-havana" name="nsbu-openstack/glance-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/heat-havana" name="nsbu-openstack/heat-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/horizon-havana" name="nsbu-openstack/horizon-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/keystone-havana" name="nsbu-openstack/keystone-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/neutron-havana" name="nsbu-openstack/neutron-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/nova-havana" name="nsbu-openstack/nova-havana.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/python-keystoneclient" name="nsbu-openstack/python-keystoneclient.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/vmos" name="nsbu-openstack/vmos.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/vmos-prep" name="nsbu-openstack/vmos-prep.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/vmosautoconfig" name="nsbu-openstack/vmosautoconfig.git" groups="vmos" remote="vmos"/>
  <project path="vmos/nsbu-openstack/vmosautoprep" name="nsbu-openstack/vmosautoprep.git" groups="vmos" remote="vmos"/>
  <project path="vmos/transforms/installer" name="transformers/installer.git" groups="vmos" remote="vmos"/>

</manifest>
